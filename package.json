{
  "name": "stackathon1810",
  "version": "1.0.0",
  "description": "clone of a game",
  "engines": {
    "node": ">= 7.0.0"
  },
  "main": "main.js",
  "scripts": {
    "lint": "eslint ./ --ignore-path .gitignore",
    "lint-fix": "npm run lint -- --fix",
    "prettify": "prettier --write \"**/*.{js,jsx,json,css,scss,md}\"",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "001",
    "mac": {
      "category": "game"
    },
    "icon": "/public/icon.icos"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --write",
      "git add"
    ],
    "*.{css,scss,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "author": "Pavel Machuca",
  "license": "MIT",
  "dependencies": {
    "asar": "^0.14.6",
    "npm-merge-driver": "^2.3.5",
    "yarn": "^1.13.0"
  },
  "devDependencies": {
    "electron": "4.0.1",
    "electron-builder": "^20.38.5",
    "eslint": "^4.19.1",
    "eslint-config-fullstack": "^5.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-react": "^7.10.0",
    "lint-staged": "^7.2.0",
    "nodemon": "^1.18.3",
    "prettier": "1.11.1"
  }
}
